---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/contents/Hero.astro";
import About from "@/contents/About.astro";
import Contact from "@/contents/Contact.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import Experience from "@/contents/Experience.astro";
import PersonalProjects from "@/contents/PersonalProjects.astro";
import WorkProjects from "@/contents/WorkProjects.astro";
import Education from "@/contents/Education.astro";
import PrintButton from "@/components/PrintButton.astro";
import Skills from "@/contents/Skills.astro";
---

<Layout>
  <main class="markdown relative grid gap-12 p-8 xl:bg-base-100 xl:rounded-lg xl:shadow-sm max-sm:py-16 xl:grid-cols-6 md:p-16 xl:gap-24 print:!grid-cols-1 print:!gap-6 print:!p-0 print:!rounded-none print:!bg-transparent print:!shadow-none">
    <div class="absolute top-0 w-full h-full -z-10 print:hidden">
      <div class="bg-primary/20 xl:bg-primary/50 absolute left-[20%] right-auto top-0 h-[200px] w-[200px] -translate-x-[30%] translate-y-[20%] rounded-full blur-[80px] invert-0"></div>
    </div>

    <div class="space-y-6 xl:col-span-2">
      <Hero />
      <About />
      <Contact />

      <div class="print:!hidden">
        <div class="flex gap-2 absolute top-0 right-0 m-4 z-10 xl:-ml-2 xl:m-0 xl:relative">
          <PrintButton />
          <ThemeToggle />
        </div>
      </div>
    </div>

    <div class="space-y-12 xl:col-span-4 print:!col-span-1 print:space-y-8">
      <Education />
      <Experience />
    </div>

    <div class="flex w-full justify-center xl:col-span-6">
      <PersonalProjects />
    </div>

    <div class="flex w-full justify-center xl:col-span-6">
      <WorkProjects />
    </div>

    <div class="flex w-full xl:col-span-6">
      <Skills />
    </div>

    <div class="flex w-full justify-center xl:col-span-6 print:!hidden">
      <p class="text-neutral text-xs !mb-0">Living, learning, & leveling up one day at a time</p>
    </div>
  </main>
</Layout>
