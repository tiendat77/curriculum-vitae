---
import Project from '@/components/Project.astro';

import AngularIcon from "@/icons/angular.astro";
import TailwindIcon from "@/icons/tailwind.astro";
---

<Project
  name="BLogic Online Ordering"
  type="Work"
  year="2024 - Present"
>
  <article class="mt-2 text-sm">
    <p>
      A online ordering system for restaurants, that allows customers to order food and drinks from their phones. It supports online payments and integrates with the restaurant's POS system.
    </p>

    <ul class="flex flex-wrap gap-2 mt-2">
      <li class="badge badge-primary print:!bg-transparent">
        <AngularIcon />
        <span>Angular 15</span>
      </li>

      <li class="badge badge-primary print:!bg-transparent">
        <TailwindIcon />
        <span>TailwindCSS</span>
      </li>
    </ul>
  </article>
</Project>
